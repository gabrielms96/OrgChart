@model OrgChart.Application.DTOs.EmployeeCreateDto

@{
    ViewData["Title"] = "Novo Colaborador";
}

<h1><i class="bi bi-plus-circle"></i> Novo Colaborador</h1>

<div class="row">
    <div class="col-md-10">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label">Nome *</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label">Email *</label>
                            <input asp-for="Email" type="email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DepartmentId" class="form-label">Departamento *</label>
                            <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.Departments">
                                <option value="">Selecione...</option>
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="PositionId" class="form-label">Cargo *</label>
                            <select asp-for="PositionId" class="form-select" asp-items="ViewBag.Positions">
                                <option value="">Selecione...</option>
                            </select>
                            <span asp-validation-for="PositionId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="HireDate" class="form-label">Data de Admissão *</label>
                            <input asp-for="HireDate" type="date" class="form-control" />
                            <span asp-validation-for="HireDate" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="ManagerId" class="form-label">Gerente (opcional)</label>
                            <select asp-for="ManagerId" class="form-select" asp-items="ViewBag.Managers">
                                <option value="">Sem gerente</option>
                            </select>
                            <span asp-validation-for="ManagerId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Salvar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
