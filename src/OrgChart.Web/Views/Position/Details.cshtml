@model OrgChart.Application.DTOs.PositionDto

@{
    ViewData["Title"] = "Detalhes do Cargo";
}

<h1><i class="bi bi-eye"></i> Detalhes do Cargo</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Nível</dt>
            <dd class="col-sm-9"><span class="badge bg-info">@Model.LevelDescription</span></dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Ativo</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inativo</span>
                }
            </dd>

            <dt class="col-sm-3">Colaboradores</dt>
            <dd class="col-sm-9">@Model.EmployeeCount</dd>

            <dt class="col-sm-3">Criado em</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

            @if (Model.UpdatedAt.HasValue)
            {
                <dt class="col-sm-3">Atualizado em</dt>
                <dd class="col-sm-9">@Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</dd>
            }
        </dl>

        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>
    </div>
</div>
